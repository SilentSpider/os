<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    android:orientation="horizontal"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout android:orientation="vertical" android:layout_weight="1" android:layout_height="fill_parent" android:layout_width="fill_parent">



    <TextView
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:id="@+id/item_app_name"
        android:layout_width="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="1 Select Your Wifi Network"
        android:textColor="#44444a"
        android:textSize="20dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
      />

    <ListView
        android:layout_rowSpan="4"
        android:layout_gravity="left|top"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="10dp"
        android:id="@+id/wifiList"
        android:background="#ffffff" />

    </LinearLayout>

    <LinearLayout android:orientation="vertical" android:layout_weight="1" android:layout_height="fill_parent" android:layout_width="fill_parent">

    <TextView
        android:layout_height="wrap_content"
        android:layout_gravity="left|top"
        android:layout_width="fill_parent"
        android:layout_marginTop="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Wifi password:"
        android:id="@+id/textView"
        android:layout_marginLeft="30dp"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_gravity="left|top"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginLeft="30dp"
        android:id="@+id/passwordTextEdit" />

    <CheckBox
        android:layout_gravity="left|top"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Show password"
        android:layout_marginLeft="30dp"
        android:id="@+id/showPasswordCheckBox" />

    <Button
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top"
        android:text="Connect"
        android:textColor="@color/colorAccent"
        android:id="@+id/connectButton" />
    </LinearLayout>

</LinearLayout>